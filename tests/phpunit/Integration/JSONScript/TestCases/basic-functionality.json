{
	"description": "Multiple 'display parameters'",
	"setup": [
		{
			"namespace": "SMW_NS_PROPERTY",
			"page": "SomeText",
			"contents": "[[Has type::Text]]"
		},
		{
			"namespace": "SMW_NS_PROPERTY",
			"page": "SomeNumber",
			"contents": "[[Has type::Number]]"
		},
		{
			"namespace": "SMW_NS_PROPERTY",
			"page": "Unused",
			"contents": "[[Has type::Text]]"
		},
		{
			"page": "Header1",
			"contents": "This is Header1"
		},
		{
			"page": "Footer1",
			"contents": "This is Footer1"
		},
		{
			"namespace": "NS_CATEGORY",
			"page": "Category1",
			"contents": "{{#drilldowninfo: title=Exploring category 1|header=Header1|footer=Footer1|filters=XText (property=SomeText),XNumber (property=SomeNumber),Unused (property=Unused)|display parameters=?Text;format=list}}"
		},
		{
			"page": "BluePage1",
			"contents": "[[Category:Category1]][[SomeText::blue]][[SomeNumber::1]]"
		},
		{
			"page": "BluePage1b",
			"contents": "[[Category:Category1]][[SomeText::blue]][[SomeNumber::1]]"
		},
		{
			"page": "BluePage2",
			"contents": "[[Category:Category1]][[SomeText::blue]]"
		},
		{
			"page": "RedPage1",
			"contents": "[[Category:Category1]][[SomeText::red]][[SomeNumber::2]]"
		},
		{
			"page": "BluePageWithoutCategory",
			"contents": "[[SomeText::blue]]"
		}
	],
	"tests": [
		{
			"//type": "special",
			"//": "cannot be tested this way because the title is not part of the output",
			"about": "custom title is used",
			"special-page": {
				"page": "BrowseData",
				"query-parameters": "Category1",
				"request-parameters": {}
			},
			"assert-output": {
				"to-contain": [
					"Exploring category 1"
				]
			}
		},
		{
			"type": "special",
			"about": "header and footer are uses",
			"special-page": {
				"page": "BrowseData",
				"query-parameters": "Category1",
				"request-parameters": {}
			},
			"assert-output": {
				"to-contain": [
					"This is Header1",
					"This is Footer1"
				]
			}
		},
		{
			"type": "special",
			"about": "without filter all pages with matching category are shown and filters with matching pages are offered",
			"special-page": {
				"page": "BrowseData",
				"query-parameters": "Category1",
				"request-parameters": {}
			},
			"assert-output": {
				"to-contain": [
					"BluePage1",
					"BluePage2",
					"RedPage1",
					"<a href=\"/index.php/Special:BrowseData/Category1?XText=blue\" title=\"Filter by this value\">blue&nbsp;(3)</a>",
					"<a href=\"/index.php/Special:BrowseData/Category1?XText=red\" title=\"Filter by this value\">red&nbsp;(1)</a>",
					"<a href=\"/index.php/Special:BrowseData/Category1?XNumber=1\">1 (2) </a>",
					"<a href=\"/index.php/Special:BrowseData/Category1?XNumber=2\">2 (1) </a>",
					"Unused:", "(There are no values for this filter)"
				],
				"not-contain": [
					"BluePageWithoutCategory",
					"Special:BrowseData/Category1?Unused="
				]
			}
		},
		{
			"type": "special",
			"about": "with filter only pages matching the filter are shown and only filters with matches within these pages are offered",
			"special-page": {
				"page": "BrowseData",
				"query-parameters": "Category1",
				"request-parameters": {
					"XText": "blue"
				}
			},
			"assert-output": {
				"to-contain": [
					"BluePage1",
					"BluePage2",
					"<a href=\"/index.php/Special:BrowseData/Category1?XText=blue&XNumber=1\">1 () </a>"
				],
				"not-contain":[
					"RedPage1",
					"Special:BrowseData/Category1?XText=blue&XNumber=2"
				]
			}
		}
	],
	"settings": {
		"wgLang": "en"
	},
	"meta": {
		"version": "2",
		"is-incomplete": false,
		"debug": false
	}
}
